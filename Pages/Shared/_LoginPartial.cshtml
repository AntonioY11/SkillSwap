@using System.Security.Claims

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <span class="nav-link text-dark">Hello, @User.FindFirst(ClaimTypes.Name)?.Value!</span>
    </li>
    <li class="nav-item">
        <form asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index")" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>